#
# build with (note build context if required):
# docker build -t ubuntu_py3_dev-env:latest -f path/to/Dockerfile .
#
# run with:
# docker run -it -v /path/to/volume/for/mounting:/root/mount_location --cap-add=SYS_PTRACE --security-opt seccomp=unconfined --rm ubuntu_py3_dev-env
#

FROM ubuntu:rolling

LABEL version="v1.0.0" description="slim Ubuntu-based Python3 dev environment image"
MAINTAINER steve

RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-pip \
    curl \
    vim	\
    screen \
    git \
    nano \
    man 
    
RUN pip3 install --upgrade pip
RUN pip3 install --no-cache-dir numpy pandas scipy matplotlib luxpy pylint

ENV PYTHONPATH="/root/code/python/librarys:${PYTHONPATH}"

RUN curl -sL https://raw.githubusercontent.com/chewdonkey/dev-env/master/configs/.bashrc >> /root/.bashrc
RUN curl -sL https://raw.githubusercontent.com/chewdonkey/dev-env/master/configs/.vimrc >> /root/.vimrc
RUN curl -sL https://raw.githubusercontent.com/chewdonkey/dev-env/master/configs/.screenrc >> /root/.screenrc
RUN curl -sL https://raw.githubusercontent.com/chewdonkey/dev-env/master/.gitignore_global >> /root/.gitignore_global

RUN git config --global user.name "chewdonkey"
RUN git config --global user.email "chewdonkey@gmail.com"
RUN git config --global core.excludesfile /root/.gitignore_global

WORKDIR /root

ENTRYPOINT ["/bin/bash"]
